# AI Provider Configurations

openai:
  type: api
  api_keys:
    processing: "OPENAI_PROCESSING_KEY"  # For text processing
    validation: "OPENAI_VALIDATION_KEY"  # For validation
  models:
    processing:
      - name: gpt-3.5-turbo
        max_tokens: 4096
        temperature: 0.2
        cost_per_token: 0.002
      - name: gpt-4-turbo
        max_tokens: 4096
        temperature: 0.2
        cost_per_token: 0.01
    validation:
      - name: gpt-4-turbo
        max_tokens: 4096
        temperature: 0.1
        cost_per_token: 0.01

anthropic:
  type: api
  api_keys:
    processing: "ANTHROPIC_PROCESSING_KEY"
    validation: "ANTHROPIC_VALIDATION_KEY"
  models:
    processing:
      - name: claude-3-sonnet
        max_tokens: 4096
        temperature: 0.2
    validation:
      - name: claude-3-opus
        max_tokens: 4096
        temperature: 0.1

ollama:
  type: local
  host: "OLLAMA_HOST"  # References env var
  models:
    processing:
      - name: mistral
        gpu: true
        max_tokens: 4096
    validation:
      - name: mixtral
        gpu: true
        max_tokens: 4096
