# AI Provider Configuration

# OpenAI Configuration
OPENAI_PROCESSING_KEY=sk-processing-key-here  # For text processing
OPENAI_VALIDATION_KEY=sk-validation-key-here  # For validation
OPENAI_ORG_ID=your-org-id-here

# Anthropic Configuration
ANTHROPIC_PROCESSING_KEY=sk-ant-processing-key-here  # For Sonnet
ANTHROPIC_VALIDATION_KEY=sk-ant-validation-key-here  # For Opus

# DeepSeek Configuration
DEEPSEEK_API_KEY=your-api-key-here

# OpenRouter Configuration
OPENROUTER_API_KEY=your-api-key-here

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434

# Agent Configuration
AGENT_RESULT_THRESHOLD=0.8
AGENT_MAX_RETRIES=3

# Processing Agent Configuration
PROCESSING_DEFAULT_PROVIDER=openai
PROCESSING_DEFAULT_MODEL=gpt-3.5-turbo  # Base model for text processing
PROCESSING_FALLBACK_PROVIDER=anthropic
PROCESSING_FALLBACK_MODEL=claude-3-sonnet

# Validation Agent Configuration
VALIDATION_DEFAULT_PROVIDER=openai
VALIDATION_DEFAULT_MODEL=gpt-4-turbo  # More capable model for validation
VALIDATION_FALLBACK_PROVIDER=anthropic
VALIDATION_FALLBACK_MODEL=claude-3-opus

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
PDFTOPPM_PATH=/usr/bin/pdftoppm
DEFAULT_DPI=400
OCR_CONFIDENCE_THRESHOLD=0.6

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-password-here

# Vector DB Configuration
VECTOR_DB_HOST=weaviate
VECTOR_DB_PORT=8080
VECTOR_DB_API_KEY=your-api-key-here

# Service Configuration
LOG_LEVEL=INFO
MAX_WORKERS=4
BATCH_SIZE=10
