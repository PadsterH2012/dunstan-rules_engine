# AI Provider Configuration

# OpenAI Configuration
OPENAI_PROCESSING_KEY=sk-processing-key-here  # For vision models
OPENAI_VALIDATION_KEY=sk-validation-key-here  # For validation
OPENAI_ORG_ID=your-org-id-here

# Anthropic Configuration
ANTHROPIC_PROCESSING_KEY=sk-ant-processing-key-here  # For Claude 3 Vision
ANTHROPIC_VALIDATION_KEY=sk-ant-validation-key-here  # For validation

# DeepSeek Configuration
DEEPSEEK_API_KEY=your-api-key-here

# OpenRouter Configuration
OPENROUTER_API_KEY=your-api-key-here

# Agent Configuration
AGENT_RESULT_THRESHOLD=0.8
AGENT_MAX_RETRIES=3

# Processing Agent Configuration
PROCESSING_DEFAULT_PROVIDER=openai
PROCESSING_DEFAULT_MODEL=gpt-4-vision-preview
PROCESSING_FALLBACK_PROVIDER=anthropic
PROCESSING_FALLBACK_MODEL=claude-3-opus

# Validation Agent Configuration
VALIDATION_DEFAULT_PROVIDER=openai
VALIDATION_DEFAULT_MODEL=gpt-4-turbo-preview
VALIDATION_FALLBACK_PROVIDER=anthropic
VALIDATION_FALLBACK_MODEL=claude-3-opus

# PDF Processing Configuration
PDF_CHUNK_SIZE=20
PDF_CHUNK_OVERLAP=2
PDF_MAX_PARALLEL_CHUNKS=3
PDF_FORMAT=png
PDF_QUALITY=95
PDF_MAX_WIDTH=2048
PDF_MAX_HEIGHT=2048
PDF_TEMP_DIR=/tmp/pdf-chunks

# Processing Configuration
MAX_PAGES_PER_REQUEST=2
PAGE_PROCESSING_TIMEOUT=300  # seconds
CONFIDENCE_THRESHOLD=0.6
CONSENSUS_REQUIRED=0.7  # minimum agreement between models

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-password-here

# Vector DB Configuration
VECTOR_DB_HOST=weaviate
VECTOR_DB_PORT=8080
VECTOR_DB_API_KEY=your-api-key-here

# Service Configuration
LOG_LEVEL=INFO
MAX_WORKERS=4
BATCH_SIZE=10
